<Window x:Class="Socket_Client_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Socket_Client_Server"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Height="175.099" Width="245.799">
    <Grid>
        <Button Content="Client" x:Name="BtnClient" Click="BtnClient_Click" Margin="10,38,10,0" VerticalAlignment="Top" Grid.ColumnSpan="2"/>
        <Button Content="Server" x:Name="BtnServer" Click="BtnServer_Click" Margin="10,113,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxClient" Height="23" Margin="10,0,10,113" TextWrapping="Wrap" Text="Insira o IP e Porta" VerticalAlignment="Bottom"/>
        <TextBox x:Name="txtBoxServerIP" HorizontalAlignment="Left" Height="23" Margin="10,85,0,0" TextWrapping="Wrap" Text="Insira o IP" VerticalAlignment="Top" Width="122"/>
        <TextBox x:Name="txtBoxServerPort" Height="23" Margin="137,85,10,0" TextWrapping="Wrap" Text="Insira a Porta" VerticalAlignment="Top"/>
    </Grid>
</Window>
