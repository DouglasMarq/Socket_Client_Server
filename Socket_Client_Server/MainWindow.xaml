<Window x:Class="Socket_Client_Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Socket_Client_Server"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Central de Controle" Height="210.413" Width="245.799">
    <Grid>
        <Button Content="Entrar no Servidor" x:Name="BtnClient" Click="BtnClient_Click" Margin="10,65,10,0" VerticalAlignment="Top"/>
        <Button Content="Iniciar Servidor" x:Name="BtnServer" Click="BtnServer_Click" Margin="10,144,10,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxClientIP" Margin="10,37,108,0" TextWrapping="Wrap" Text="Insira o IP" Height="23" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxServerIP" HorizontalAlignment="Left" Height="23" Margin="10,116,0,0" TextWrapping="Wrap" Text="Insira o IP" VerticalAlignment="Top" Width="122"/>
        <TextBox x:Name="txtBoxServerPort" Height="23" Margin="137,116,10,0" TextWrapping="Wrap" Text="Insira a Porta" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxClientPort" Height="23" Margin="137,37,10,0" TextWrapping="Wrap" Text="Insira a Porta" VerticalAlignment="Top"/>
        <TextBox x:Name="txtBoxName" Height="23" Margin="10,9,10,0" TextWrapping="Wrap" Text="Insira um Nome" VerticalAlignment="Top"/>
    </Grid>
</Window>
